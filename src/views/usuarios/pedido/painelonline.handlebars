                $('#add-ingredientes').empty()
                response.ingredientes.forEach(element => {
                    $('#add-ingredientes').append(`<button type="button" class="btn btn-secondary btn-sm m-1" style="font-size: x-small;">${element.nome}</button>`)
                })

                // adicionais
