            }

            if ($(`input:checkbox`).length - 1 == i) {
                jQuery.ajax({
                    type: "POST",
                    url: '/estabelecimento/add-painel-carrinho-produto',
                    data: {
                        produto: $("#form-add-painel-carrinho-produto-1").serializeArray(),
