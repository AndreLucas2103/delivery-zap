                $(".card-style-produto").each(function (i, elementDiv) {
                    if (elementDiv.getAttribute('data-bs-nome').length > 20) {
                        $(this).css({ 'width': `${elementDiv.getAttribute('data-bs-nome').length * 10}px` });
